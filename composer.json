{
    "name": "firalabs/firadmin",
    "description": "Basic admin panel for Laravel 4 with login and user controller implementation",
    "keywords": ["laravel","admin","user","login","cpanel","managment","privilege"],
    "authors": [
        {
            "name": "Maxime Beaudoin",
            "email": "firalabs@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "dev-master",
        "laravelbook/ardent": "1.0.*",        
        "illuminate/auth": "dev-master",
        "zendframework/zend-permissions-acl": "2.1.*"
    },    
    "require-dev": {
        "mockery/mockery": "dev-master"
    },
    "autoload": {
        "classmap": [
            "src/migrations",
            "src/commands"
        ],
        "psr-0": {
            "Firalabs\\Firadmin": "src/"
        }
    },
    "minimum-stability": "dev"
}